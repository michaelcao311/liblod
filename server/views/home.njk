<!DOCTYPE html>
<html>
    <head>
        <title>blod</title>
        <script src="/socket.io/socket.io.js"></script>
        <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Bungee+Shade|Source+Sans+Pro:300" rel="stylesheet">
        <link href="/css/home.css" rel="stylesheet">
        <script>   
            var socket = io();
            socket.on('connect', function() {
                socket.emit('connect waiting');
            });
        </script>
        <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
        <script src="nunjucks.js"></script>
        <script src="/home.js"></script>
    <head>
    <body>
        <h1 id="header"> Welcome to Liblod! </h1>
        <br>
        
        <div id="nameform">
            <h3> <strong>Name: </strong> </h3>
            <input id="name" type="text" name="name">
            <button id="submitname" class="btn btn-default"> Blod </button>
        </div>
        <div id="roomform">
        <div id="create">
        <form action="/room" method="get">
            <h1> Create a Room! </h1>
            <h3> <strong>Room: </strong> </h3>
            <br>
            <input id="roomtyper" type="text" name="room">
            <br>
            <button id="submitter" type="submit" class="btn btn-default"> Create! </button> 
        </form>
        </div>
        <div id="existing">
            <h1> Join an Existing Room! </h1>
            <div class="row">
                <div id="names" class="col-sm-10">
                    <h2> Room Names </h2>
                </div>
                <div id="players" class="col-sm-2">
                    <h2> Players </h2>
                </div>
                    {% for room, cap in renderedRooms %}
                <div id="room_name" class="col-sm-10">
                    <a href='/room?room={{ room }}'> {{ room }} </a>
                </div>
                <div id="cap" class="col-sm-2">
                    <h3> {{ cap }} </h3>
                </div>
                {% endfor %}
            </div>
        </div>
        </div>

<!--     <script src="/socket.io/socket.io.js"></script>
  <script src="client.js"></script>  -->

    </body>
</html>
