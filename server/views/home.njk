<body>
    <h1 id="header"> Welcome to Liblod! </h1>
  <br>
  <form action="/room" method="get">
    <h3> <strong>Name: </strong> </h3>
    <br>
    <input id="name" type="text" name="name">
    <br>
    <h3> <strong>Room: </strong> </h3>
    <br>
    <input id="roomtyper" type="text" name="room">
    <br>
    <select id="roomselector" name="room">
      <option> -- </option>
      {% for room, cap in renderedRooms %}
      <option class="roomoption" value="{{ room }}">
        {{ room }}
      </option>
      {% endfor %}
    </select> 
    <input id="submitter" type="submit" value="Submit!"> 
  </form>

  <div id="rooms">
      <div class="row">
      <div id="names" class="col-sm-10">
      <h2> Room Names </h2>
      </div>
      <div id="players" class="col-sm-2">
      <h2> Players </h2>
      </div>
        {% for room, cap in renderedRooms %}
      <div id="room_name" class="col-sm-10">
      <h2> {{ room }} </a>
      </div>
      <div id="cap" class="col-sm-2">
      <h3> {{ cap }} </h3>
      </div>
        {% endfor %}
      </div>
  </div>

